<!-- Table of Contents -->
<% if (page.catalog || true) { %>
    <% if (is_post()){ %>
      <aside id="sidebar">
        <div id="toc" class="toc-article">
        <strong class="toc-title"><%= __('contents') %></strong>
        <% if (toc(page.content) != ""){ %>
          <%- toc(page.content, { "class": "toc-nav" , "" : (page.toc.line_number || }) %>
        <% } else { %>
          <ol class="nav"><%= __('none') %></ol>
        <% } %>
        </div>
      </aside>
    <% } %>
<% } %>
